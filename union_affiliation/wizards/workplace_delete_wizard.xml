<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form view para el wizard de confirmación -->
    <record id="union_workplace_delete_wizard_form" model="ir.ui.view">
        <field name="name">union.workplace.delete.wizard.form</field>
        <field name="model">union.workplace.delete.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirmar Eliminación">
                <div class="alert alert-warning" role="alert">
                    <strong>¡Atención!</strong>
                    <p>Esta acción no se puede deshacer.</p>
                </div>
                
                <group>
                    <field name="workplace_id" readonly="1"/>
                </group>
                
                <div class="o_form_sheet">
                    <field name="message" widget="text" readonly="1" 
                           style="white-space: pre-line; font-family: monospace; border: none; background: none;"/>
                </div>
                
                <footer>
                    <button name="action_confirm_delete" 
                            type="object" 
                            string="Sí, eliminar todo" 
                            class="btn-danger"/>
                    <button name="action_cancel" 
                            type="object" 
                            string="Cancelar" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
