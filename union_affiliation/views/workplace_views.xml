<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="union_workplace_tree" model="ir.ui.view">
        <field name="name">union.workplace.tree</field>
        <field name="model">union.workplace</field>
        <field name="arch" type="xml">
            <tree string="Lugares de trabajo">
                <field name="name"/>
                <field name="complete_name"/>
                <field name="code"/>
                <!-- TODO: Agregar lógica para contabilizar segun el estado de los afiliados -->
                <!-- <field name="affiliate_count"/>
                <field name="main_affiliate_count"/> -->
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="union_workplace_form" model="ir.ui.view">
        <field name="name">union.workplace.form</field>
        <field name="model">union.workplace</field>
        <field name="arch" type="xml">
            <form string="Lugar de trabajo">
                <sheet>
                    <!-- TODO: Agregar lógica para contabilizar segun el estado de los afiliados -->
                    <div class="oe_button_box" name="button_box">
                        <!-- <button name="%(union_affiliation_affiliate_list_action)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-users"
                                context="{'search_default_workplace_ids': active_id}">
                            <field name="affiliate_count" widget="statinfo" string="Total Afiliados"/>
                        </button>
                        <button name="%(union_affiliation_affiliate_list_action)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-user-circle"
                                context="{'search_default_main_workplace_id': active_id}">
                            <field name="main_affiliate_count" widget="statinfo" string="Principales"/>
                        </button> -->
                        <button name="action_delete_with_confirmation" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-trash"
                                string="Eliminar"/>
                    </div>
                    
                    <widget name="web_ribbon" title="Inactivo" bg_color="bg-danger" 
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    
                    <group>
                        <group>
                            <field name="name" placeholder="ej: Oficina Central"/>
                            <field name="code" placeholder="ej: OFC-001"/>
                            <field name="parent_id" options="{'no_create': True}"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="complete_name" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Dependencias inferiores">
                            <field name="child_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <!-- TODO: Agregar lógica para contabilizar segun el estado de los afiliados -->
                                    <!-- <field name="affiliate_count"/>
                                    <field name="main_affiliate_count"/> -->
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
