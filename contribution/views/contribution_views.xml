<odoo>
    <data>
        <record model="ir.ui.view" id="contribution_affiliate_contribution_form">
            <field name="name">contribution.affiliate.contribution.form</field>
            <field name="model">contribution.affiliate_contribution</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group name="Information">
                            <field name="affiliate_id" />
                            <field name="date" />
                            <field name="contrib_amount" />
                            <field name="contribution_code_id" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="contribution_affiliate_contribution_tree">
            <field name="name">contribution.affiliate.contribution.tree</field>
            <field name="model">contribution.affiliate_contribution</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="affiliate_id" />
                    <field name="date" />
                    <field name="contrib_amount" />
                    <field name="contribution_code_id" />
                </tree>
            </field>
        </record>
    </data>
</odoo>