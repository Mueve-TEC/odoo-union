<odoo>
    <data>
        <record model="ir.ui.view" id="benefit_request_type_form">
            <field name="name">benefit_request_type_form</field>
            <field name="model">benefit_request.request_type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="name" placeholder="Name"/>
                        <group>
                            <group string="Acceptation">
                                <field name="who_apply"/>
                                <field name="state_ids" widget="many2many_tags" attrs="{'invisible':[('who_apply','=','everybody')]}"/>
                                <field name="quote" attrs="{'invisible':[('who_apply','=','everybody')]}"/>
                            </group>
                            <group string="Related to">
                                <field name="request_group_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="benefit_request_type_tree">
            <field name="name">benefit_request_type_tree</field>
            <field name="model">benefit_request.request_type</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="who_apply" />
                    <field name="state_ids" />
                    <field name="quote" />
                    <field name="request_group_ids" />
                </tree>
            </field>
        </record>
    </data>
</odoo>