<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="request_view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.request</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page name="benefit" string="Solicitudes">
                        <field name="benefit_request_ids" readonly="True" />
                    </page>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo>
