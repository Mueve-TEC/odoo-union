<odoo>
    <data>
        <record model="ir.ui.view" id="request_affiliation_affiliate_form">
            <field name="name">request.affiliation.affiliate.form</field>
            <field name="model">affiliation.affiliate</field>
            <field name="inherit_id" ref="affiliation.affiliation_affiliate_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page name="benefit" string="Benefit requests">
                        <field name="benefit_request_ids" readonly="True" />
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>